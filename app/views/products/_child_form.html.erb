<%= form_tag product_rels_path, html: {class: "form-horizontal"}, remote: true do |f| %>

   <div class="form-group">
      <%= label_tag :parent_id, "Parent", html: {class: "col-md-2 control-label"} %>
      <%#= hidden_field_tag :parent_id %>
      <%= text_field_tag :parent_id %>
